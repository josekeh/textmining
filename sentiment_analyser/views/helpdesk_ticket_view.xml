<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="helpdesk_ticket_sentiment_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.sentiment.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <field name="email_cc" position="after">
                <field name="estado_felicidad"/>
            </field>
        </field>
    </record>

    <record id="generate_summary_action" model="ir.actions.server">
        <field name="name">Generate Summary</field>
        <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
        <field name="binding_model_id" ref="helpdesk.model_helpdesk_ticket"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action = records.action_create_summary()</field>
    </record>
</odoo>
